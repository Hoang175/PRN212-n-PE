<Window x:Class="ResearchProjectManagement_SE171151.LoginWindw"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResearchProjectManagement_SE171151"
        mc:Ignorable="d"
        Title="Login Window Spring 2025" Height="400" Width="700" 
        FontFamily="Tahoma" FontSize="26" Background="#FFF5F5DC"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Email" Margin="81,108,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" Margin="81,160,0,0" VerticalAlignment="Top"/>
        <Label Content="Login Form" HorizontalAlignment="Left" Margin="248,44,0,0" VerticalAlignment="Top" FontSize="24" FontWeight="Bold" FontFamily="Bodoni MT Black"/>
        <TextBox x:Name="EmailTextBox" HorizontalAlignment="Left" Margin="240,108,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="317"/>
        <TextBox x:Name="PasswordTextBox" HorizontalAlignment="Left" Margin="240,163,0,0" VerticalAlignment="Top" Width="317"/>

        <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Left" Margin="219,209,0,0" VerticalAlignment="Top" Width="142" Click="BtnLogin_Click" RenderTransformOrigin="1.085,0.563"/>
        <Button x:Name="ResetButton" Content="Reset" HorizontalAlignment="Left" Margin="405,209,0,0" VerticalAlignment="Top" Width="152" Click="BtnReset_Click"/>
    </Grid>
</Window>
