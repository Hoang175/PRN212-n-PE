<Window x:Class="Q2_SP25_ThuVienBook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Q2_SP25_ThuVienBook"
        mc:Ignorable="d"
        Title="" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dgBook" AutoGenerateColumns="False" Margin="90,56,349,55">
            <DataGrid.Columns>
                <DataGridTextColumn Header="BookID" Width="80" Binding="{Binding BookId}"/>
                <DataGridTextColumn Header="Title" Width="100" Binding="{Binding Title}"/>
                <DataGridTextColumn Header="Genre" Width="100" Binding="{Binding Genre.GenreName}"/>
              
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btnView" Content="View Borrowers" HorizontalAlignment="Left" Margin="556,331,0,0" VerticalAlignment="Top" Click="btnView_Click"/>


    </Grid>
</Window>
